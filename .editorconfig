# EditorConfig is awesome: http://EditorConfig.org

# This is the top-most .editorconfig file; do not search in parent directories.
root = true

# All files.
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{csv,ini}]
insert_final_newline = false

[*.md]
max_line_length = 80

[*.scss]
indent_size = 2

[*.{neon,yaml,yml}]
indent_size = 2

[{_.htaccess,.htaccess}]
indent_style = tab

[composer.json]
indent_size = 2

[package.json]
indent_size = 2
